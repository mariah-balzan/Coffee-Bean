<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:minHeight="88dp">

    <ImageView
        android:id="@+id/favourites_list_item_icon"
        android:layout_width="55dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/ic_baseline_favorite_24" />

    <TextView
        android:id="@+id/favourites_primary_text"
        android:layout_width="320dp"
        android:layout_height="37dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/favourites_list_item_icon"
        android:fontFamily="@font/delagothicone_regular"
        android:maxLines="3"
        android:paddingTop="14dp"
        android:paddingEnd="16dp"
        android:layout_marginBottom="10dp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/favourites_secondary_text"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favourites_primary_text"
        android:layout_marginStart="15dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/favourites_list_item_icon"
        android:textSize="14sp"/>


</RelativeLayout>